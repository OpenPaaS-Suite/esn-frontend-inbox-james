ng-form(name="form")
  .form-group
    label.fg-label {{ 'Messages whose subjects' | translate }}
    md-input-container
      md-select(ng-model="$ctrl.criterion.operator", md-container-class="criterion-type-selector-dropdown", required)
        md-option(ng-value="'contains'") {{ 'contain exactly' | translate }}
        md-option(ng-value="'containsIgnoreCase'") {{ 'contain' | translate }}
        md-option(ng-value="'equals'") {{ 'match exactly' | translate }}
        md-option(ng-value="'equalsIgnoreCase'") {{ 'match' | translate }}

  .form-group
    label.fg-label {{ 'the words' | translate }}
    .fg-line
      input.input.form-control(type='text', ng-model="$ctrl.criterion.value", autoclose="1", required)
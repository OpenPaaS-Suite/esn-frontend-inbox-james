ng-form(name="form")
  .form-group
    label.fg-label(ng-if="$ctrl.participantType === 'recipients'") {{ 'Messages whose recipients contain' | translate }}
    label.fg-label(ng-if="$ctrl.participantType === 'sender'") {{ 'Messages whose sender is' | translate }}
    recipients-auto-complete(
      ng-model="$ctrl.paritipants",
      ng-class="{'no-more-emails': $ctrl.paritipants.length}",
      template="recipients-auto-complete",
      on-email-added="$ctrl.onTagAdded",
      on-email-removed="$ctrl.onTagRemoved"
    )